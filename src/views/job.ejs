      <p>Skills</p>
      <span class="skill">MongoDB</span>
      <span class="skill">Express.js</span>
      <span class="skill">React</span>
      <span class="skill">Nodejs</span><br />
    </div>
    <div class="col">
      <img
        src="https://cxotoday.com/wp-content/uploads/2023/03/Updated_Logo_CMYK-01.png"
        height="400px"
        width="500px"
      />
    </div>
  </div>

  <button
    class="btn btn-lg btn-outline-light mt-3 text-center"
    data-bs-toggle="modal"
    data-bs-target="#apply-form"
  >
    Apply Now
  </button>

  <div
    class="modal fade"
    id="apply-form"
    tabindex="-1"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5 text-dark" id="exampleModalLabel">
            Please fill out these required fields
          </h1>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <form action="" >
            <div class="mb-3">
              <label for="name" class="form-label text-dark">Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                placeholder="enter your name"
              />
            </div>
            <div class="mb-3">
              <label for="email" class="form-label text-dark">Email</label>
              <input
                type="email"
                class="form-control"
                id="email"
                placeholder="enter your email"
              />
            </div>
            <div class="mb-3">
              <label for="number" class="form-label text-dark">Contact</label>
              <input
                type="number"
                class="form-control"
                id="number"
                placeholder="enter your number"
              />
            </div>
            <div class="mb-3">
              <label for="file-upload" class="form-label text-dark">Resume</label>
              <input
                type="file"
                class="form-control"
                id="file-upload"
                accept="images/*"
              />
            </div>
            
              <button type="submit" class=" btn btn-lg btn-outline-dark form-submit-btn">Submit</button>
              <!-- <a href="/update-job" class="btn btn-dark btn-lg">Update</a> -->
            
          </form>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-dark"
            data-bs-dismiss="modal"
          >
            Close
          </button>
          <button type="button" class="btn btn-outline-dark">Save changes</button>
        </div>
      </div>
    </div>
  </div>
</div>
