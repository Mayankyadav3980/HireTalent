<div id="job-detail">
  <h1 class="mb-5">
    <%= job.role %> opportunity in <%= job.location %>  at <%= job.company %>
  </h1>
  <div class="row">
    <div class="col">
      <p>Role: <%= job.role %></p>
      <i></i>
      <p>Location: <%= job.location %></p>
      <i></i>
      <p>Salary: <%= job.salary %></p>
      <i></i>
      <p>Apply by: <%= job.applyBy %></p>
      <i></i>
      <p>Number of openings: <%= job.vacancies %></p>
      <i></i>
      <p>Applicants: Yet to update??</p>

      <span>Skills: </span>
      <% if(typeof(job.skills) != "string"){  %>
      <% job.skills.forEach( skill => { %>
        <span class="skill"><%= skill %> </span>
      <% })}else{ %>
        <span class="skill"><%= job.skills %> </span> 
       <% } %>
    </div>
    <div class="col">
      <img
        src="https://cxotoday.com/wp-content/uploads/2023/03/Updated_Logo_CMYK-01.png"
        height="400px"
        width="500px"
      />
    </div>
  </div>

  <button
    class="btn btn-lg btn-outline-light mt-3 text-center"
    data-bs-toggle="modal"
    data-bs-target="#apply-form"
  >
    Apply Now
  </button>
  <a href="/update-job/<%= job.id %>" class="btn btn-lg btn-light mt-3 mx-3">Update Job</a>
  <a href="/delete-job/<%=job.id %>" class="btn btn-lg btn-outline-danger mt-3">Delete</button>

  <div
    class="modal fade"
    id="apply-form"
    tabindex="-1"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5 text-dark" id="exampleModalLabel">
            Please fill out these required fields
          </h1>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <form action="" >
            <div class="mb-3">
              <label for="name" class="form-label text-dark">Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                placeholder="enter your name"
              />
            </div>
            <div class="mb-3">
              <label for="email" class="form-label text-dark">Email</label>
              <input
                type="email"
                class="form-control"
                id="email"
                placeholder="enter your email"
              />
            </div>
            <div class="mb-3">
              <label for="number" class="form-label text-dark">Contact</label>
              <input
                type="number"
                class="form-control"
                id="number"
                placeholder="enter your number"
              />
            </div>
            <div class="mb-3">
              <label for="file-upload" class="form-label text-dark">Resume</label>
              <input
                type="file"
                class="form-control"
                id="file-upload"
                accept="images/*"
              />
            </div>
            
              <button type="submit" class=" btn btn-lg btn-outline-dark form-submit-btn">Submit</button>
              <!-- <a href="/update-job" class="btn btn-dark btn-lg">Update</a> -->
            
          </form>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-dark"
            data-bs-dismiss="modal"
          >
            Close
          </button>
          <button type="button" class="btn btn-outline-dark">Save changes</button>
        </div>
      </div>
    </div>
  </div>
</div>
