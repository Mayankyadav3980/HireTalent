<div class="container" style="width: 50%">
  <h1 class="text-center mt-4">Update Job</h1>
  <form action="/jobs/<%=job.id%>" method="post">
    <div class="form-group mt-3">
      <label for="job-role" class="form-label"> Job Role</label>
      <input
        type="text"
        class="form-control"
        id="job-role"
        name="role"
        value="<%= job.role %>"
      />
    </div>

    <div class="form-group mt-3">
      <label for="job-location" class="form-label">Job Location</label>
      <select class="form-select" name="location" id="job-location">
        <option selected><%= job.location %></option>
        <option value="Delhi">Delhi</option>
        <option value="Mumbai">Mumbai</option>
        <option value="Pune">Pune</option>
        <option value="Bangalore">Bangalore</option>
      </select>
    </div>

    <div class="form-group mt-3">
      <label for="company-name" class="form-label">Company Name</label>
      <input
        type="text"
        class="form-control"
        id="company-name"
        name="company"
        value="<%= job.company %>"
      />
    </div>
    <div class="form-group mt-3">
      <label for="salary" class="form-label"> Salary</label>
      <input
        type="text"
        class="form-control"
        id="salary"
        name="salary"
        value="<%= job.salary %>"
      />
    </div>
    <div class="form-group mt-3">
      <label for="total-vaccancies" class="form-label"> Total Vacancies</label>
      <input
        type="number"
        class="form-control"
        id="total-vaccancies"
        name="vacancies"
        value="<%= job.vacancies %>"
      />
    </div>
    <div class="form-group mt-3">
      <label for="apply-by" class="form-label"> Apply By</label>
      <input
        type="text"
        class="form-control"
        id="apply-by"
        name="applyBy"
        value="<%= job.applyBy %>"
      />
    </div>

    <label for="skills" class="form-label mt-3">Skills</label>
    <select name="skills" id="skills" class="form-select" multiple>
     <% if(typeof(job.skills) != "string"){  %>
        <% job.skills.forEach( skill => { %>
          <option selected value="<%= skill %>"><%= skill %></option>
        <% }) %> 
      <% }else{ %>
        <option selected value="<%= job.skills %>"><%= job.skills %></option>
      <% } %>
    </select>

    <div style="text-align: center">
      <button type="submit" class="btn btn-dark mt-3" style="width: 50%">
        Update
      </button>
    </div>
  </form>
</div>
